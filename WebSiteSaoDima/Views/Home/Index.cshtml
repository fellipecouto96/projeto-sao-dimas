
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
    List<WebSiteSaoDima.Models.Evento> Eventos = ViewBag.Eventos;
    int count = 0;
}

<div class="row" style="margin-bottom:10px;">
    <div class="col-lg-24">
        <img src="~/Content/Img/Reza.jpg" style="height:400px; width:100%;" />
        <br />
    </div>
</div>

<div class="row">
    <div class="col-lg-24" style="border-bottom:1px solid gray;">
        <h3>Próximos Eventos</h3><a href="@Url.Action("Index","Eventos")">Ver todos...</a>
    </div>
    <br />
</div>
<div class="row">
    <br />
    <ul class="reset">
        @foreach (var item in Eventos)
        {
            if (count < 5)
            {
                <li class="col-md-6 col-sm-12">
                    <div class="out-link-noticias">
                        @{
                            var base64 = Convert.ToBase64String(item.imagemEvento);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        <a>
                            <div class="cover-noticias" style="background-image: url('@imgSrc');"></div>
                        </a>
                    </div> <!-- .out-link-noticias -->
                    <div class="txt-list-default">
                        <a class="cor0 cor1hover">
                            <span class="data-relacionada">@item.dataHora</span>
                            <h2>@item.nome</h2>
                        </a>
                    </div> <!-- .txt-list-default -->
                </li>
                count++;
            }
        }
    </ul>
</div>

