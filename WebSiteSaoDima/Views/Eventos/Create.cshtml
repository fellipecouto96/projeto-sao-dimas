@model WebSiteSaoDima.Models.Evento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

<h2>Create</h2>


<form action="@Url.Action("Create", "Eventos")" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Evento</h4>
        <hr />
        <div class="form-group">
            <label for="nome" class="control-label col-md-3">Nome</label>
            <div class="col-md-10">
                <input type="text" name="nome" id="nome" class=" form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="dataHora" class="control-label col-md-3">Data e Hora</label>
            <div class="col-md-10">
                <input type="datetime" name="dataHora" id="dataHora" class=" form-control" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.tipoEvento, "tipoEvento", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("tipoEvento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipoEvento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="ImageUpload" class="control-label col-md-3">Nome</label>
            <div class="col-md-10">
                <input type="file" name="ImageUpload" id="ImageUpload" class=" form-control" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuCriador, "usuCriador", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("usuCriador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.usuCriador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>
<div>
    <a href="@Url.Action("Index","Home")" class="btn btn-danger">Voltar</a>
</div>
